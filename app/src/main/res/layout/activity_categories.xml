<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/canchaTenis"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/amarillo"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Cancha de Tenis"
        android:textColor="@color/black"
        android:textColorLink="@color/amarillo"
        android:textSize="16sp"
        app:cornerRadius="3dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.691" />

    <Button
        android:id="@+id/piscinaOlimpica"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/amarillo"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Piscina Olímpica"
        android:textColor="@color/black"
        android:textColorLink="@color/amarillo"
        android:textSize="16sp"
        app:cornerRadius="3dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588" />

    <Button
        android:id="@+id/gimnasio"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/amarillo"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Gimnasio"
        android:textColor="@color/black"
        android:textColorLink="@color/amarillo"
        android:textSize="16sp"
        app:cornerRadius="3dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <Button
        android:id="@+id/canchaMicrofutbol"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/amarillo"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Cancha Microfutbol"
        android:textColor="@color/black"
        android:textColorLink="@color/amarillo"
        android:textSize="16sp"
        app:cornerRadius="3dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381" />

    <Button
        android:id="@+id/canchaCubierta"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/amarillo"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Cancha Cubierta"
        android:textColor="@color/black"
        android:textColorLink="@color/amarillo"
        android:textSize="16sp"
        app:cornerRadius="3dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Categorías"
        android:textColor="@color/azul_oscuro"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="303dp"
        android:layout_height="39dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Seleccione la categoría del panel que desea visualizar."
        android:textColor="@color/azul_oscuro"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <ImageButton
        android:id="@+id/botonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@drawable/irahome" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="311dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/logo_bgblue" />

</androidx.constraintlayout.widget.ConstraintLayout>